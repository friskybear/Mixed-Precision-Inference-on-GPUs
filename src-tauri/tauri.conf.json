{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "parallel-project",
  "version": "0.1.0",
  "identifier": "nami.parallel-project",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "parallel_project",
        "alwaysOnTop": true,
        "width": 1280,
        "height": 720,
        "center": true,
        "transparent": true,
        "shadow": true,
        "resizable": true,
        "backgroundColor": "#00000000"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost https: http: ",
        "font-src": ["*", "https:"],
        "img-src": "'self' asset: http://asset.localhost blob: data: http: https:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com",
        "script-src": "'self' 'unsafe-eval' 'unsafe-inline' data:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["*", "**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
